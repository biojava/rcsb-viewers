<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>viewers</artifactId>
		<groupId>org.rcsb</groupId>
		<version>4.1.1-SNAPSHOT</version>
	</parent>
	
	<artifactId>applications</artifactId>
	
	<name>applications</name>
	<packaging>jar</packaging>
	
	<distributionManagement>
		<downloadUrl>http://maven.rcsb.org/</downloadUrl>
		<repository>
			<uniqueVersion>false</uniqueVersion>
			<id>rcsb-pdb-maven-repo</id>
			<name>RCSB PDB Maven Repository</name>
			<url>scp://maven.rcsb.org/Website/</url>
			<layout>default</layout>
		</repository>
	</distributionManagement>
	
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.3.1</version>

			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jarsigner-plugin</artifactId>
				<version>1.2</version>
				<executions>
					<execution>
						<id>sign</id>
						<goals>
							<goal>sign</goal>
						</goals>
					</execution>
					<!--<execution>
						<id>verify</id>
						<goals>
							<goal>verify</goal>
						</goals>
					</execution>
				--></executions>
				
				<configuration>
		
          			<verbose>true</verbose>
        			<certs>true</certs>
        			<storetype>${keystore.type}</storetype>
      				<keystore>${keystore.path}</keystore>
      				<alias>${keystore.alias}</alias>
      				<storepass>${keystore.store.password}</storepass>
      				<keypass>${keystore.key.password}</keypass>
					<signedjar>${project.build.directory}/${project.build.finalName}.jar</signedjar>
					<verify>true</verify>
					<verbose>true</verbose>
					<goal>sign</goal>
				</configuration>
			</plugin>
			
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>install</phase>
						<goals>
						<goal>run</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<tasks>
						<echo message="Installing viewer applications file: ${project.build.finalName} in PDB web project " />
						<copy file="${project.build.directory}/${project.build.finalName}.jar" tofile="${basedir}/../../../pdbweb/webapp/Viewers/RCSBViewers/app.jar"></copy>

					</tasks>
				</configuration>
			</plugin>
			
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.rcsb</groupId>
			<artifactId>molecular-biology-toolkit</artifactId>
			<version>4.1.1-SNAPSHOT</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.rcsb</groupId>
			<artifactId>framework</artifactId>
			<version>4.1.1-SNAPSHOT</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.rcsb</groupId>
			<artifactId>colorbrewer</artifactId>
			<version>4.1.1-SNAPSHOT</version>
		</dependency>
	</dependencies>
	
	
</project>